extends ../layout/index

block content
    div.py-10
        h1(class="text-4xl my-10 font-extrabold text-center") Real
            span(class="font-normal") Estate
        h2.text-center.text-2xl.font-extrabold= page

    div(class="bg-white shadow py-8 px-4 rounded-lg max-w-md mx-auto")

        p(class= error ? "bg-red-500" : "bg-green-500").py-2.px-5.rounded-lg.w-full.font-bold.text-center.text-white= message

        if !error
            a(href="/auth/login" class="text-center font-bold text-sm text-slate-500 uppercase mt-10 block") Sign In