extends ../layout/index

block content
    div.py-10
        h1(class="text-4xl my-10 font-extrabold text-center") Real
            span(class="font-normal") Estate
        h2.text-center.text-2xl.font-extrabold= page

        if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p(class="bg-red-500 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg 

        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                //- When the action is empty, it sends the POST to the very same route used with the GET in order to get here.
                form(class="space-y-3" method="POST" action="")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="password") New Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md(placeholder="New Password" type="password" name="password")
                    div 
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="repeat-password") Repeat New Password
                        input#repeat-password.w-full.px-3.py-2.border.border-gray-300.rounded-md(placeholder="Repeat New Password" type="password" name="repeat-password")

                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") Already registered? Sign In
                        a.text-gray-500.text-xs(href="/auth/register") New here? Register

                    input(class="w-full bg-indigo-500 hover:bg-indigo-600 py-2 text-slate-50 cursor-pointer" type="submit" value="Reset Password")