extends ../layout/admin

//- block styles


block content
    div.py-10
        h1(class="text-4xl my-10 font-extrabold text-center") Real
            span(class="font-normal") Estate
        h2.text-center.text-2xl.font-extrabold= page

        if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p(class="bg-red-500 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg 

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-8(method="POST" action="/properties/list")
                input(type="hidden" name="_csrf" value= csrfToken)


                input(class="w-full py-3 bg-indigo-500 hover:bg-indigo-600 rounded text-slate-50 font-bold uppercase cursor-pointer" type="submit" value="Publish Property")

block scripts
