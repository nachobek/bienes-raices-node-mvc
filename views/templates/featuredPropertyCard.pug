div(class="bg-white shadow rounded-lg")
    img(class="object-cover h-72 w-full" src=`/uploads/${property.image}` alt=`property ${property.title} image`)
    div(class="p-5 space-y-2")
        h3(class="text-2xl font-bold")= property.title
        p(class="text-sm text-gray-600") Rooms: 
            span(class="text-gray-800 font-bold")= property.rooms
        p(class="text-sm text-gray-600") Bathrooms: 
            span(class="text-gray-800 font-bold")= property.bathroom
        p(class="text-sm text-gray-600") Parking: 
            span(class="text-gray-800 font-bold")= property.parking
        p(class="text-sm text-gray-600") Price Range:  
            span(class="text-gray-800 font-bold")= property.price.priceRange
        a(href=`/property/${property.id}` class="bg-indigo-600 w-full uppercase text-center block font-bold text-white p-2 rounded-lg") View Property